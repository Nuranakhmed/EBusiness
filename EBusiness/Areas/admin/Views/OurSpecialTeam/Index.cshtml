@using Core;
@model IEnumerable<OurSpecialTeam>
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <a class="btn btn success" asp-action="Create">Create</a>
           @* <p class="card-description">
                Add class <code>.table</code>
            </p>*@
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Photo</th>
                            <th>Position</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(OurSpecialTeam item in  Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Position </td>
                            <td>
                                <a class="btn btn primary" asp-action="Delete" asp-route="@item.Id">Delete</a>
                                <a class="btn btn primary" asp-action="Detail" asp-route="@item.Id">Detail</a>
                                <a class="btn warning">Update</a>
                            </td>
                      @*      <td><label class="badge badge-danger">Create</label></td>
                            <td><label class="badge badge-warning">Update</label></td>
                            <td><label class="badge badge-success">Delete</label></td>*@
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>